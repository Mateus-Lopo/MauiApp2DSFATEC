<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.NewPage1"
             Title="NewPage1">
    <VerticalStackLayout>
        <Label 
            Text="Bem vindo Nome!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry Placeholder="Qual seu nome" x:Name="txtNome"/>
        <Button Text="Aperte-me" x:Name="btnAperte" Clicked="btnAperte_Clicked"/>
        <Label x:Name="lblCampo"/>

        <Button Text="Voltar" x:Name="btnVoltar1" Clicked="btnVoltar1_Clicked"/>
    </VerticalStackLayout>
</ContentPage>